---
interface Props {
    title: string;
    stats: Record<string, number>;
}

const { title, stats } = Astro.props;
const sortedStats = Object.entries(stats).sort(([,a], [,b]) => b - a);
---

<div class="bg-white rounded-lg shadow-lg p-6">
    <h3 class="text-xl font-semibold mb-4">{title}</h3>
    <div class="space-y-2">
        {sortedStats.map(([key, value]) => (
                <div class="flex justify-between items-center">
                    <span class="text-gray-700">{key}</span>
                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">{value}</span>
                </div>
        ))}
    </div>
</div>